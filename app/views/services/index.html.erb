<div class="container">
<nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <ul class="nav navbar-nav">
            <li><%= link_to 'Πίνακας Διαχείρισης', welcomes_path %></li>
            <li><%= link_to 'Αρχική Σελίδα', root_path %></li>
        </ul>
      </div>
    </nav>
<p id="notice"><%= notice %></p>

<h1>Λίστα Υπηρεσιών</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tίτλος</th>
      <th>Tιμή</th>
      <th>Κατηγορία</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.title %></td>
        <td><%= service.price %></td>
        <td><%= Category.find(service.category_id).name %></td>
        <td><%= link_to 'Εμφάνιση', service %></td>
        <td><%= link_to 'Επεξεργασία', edit_service_path(service) %></td>
        <td><%= link_to 'Διαγραφή', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Νέα Υπηρεσία", new_service_path, class:"btn btn-default btn-xs" %>
</div>