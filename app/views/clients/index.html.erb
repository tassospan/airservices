<div class="container">
<nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <ul class="nav navbar-nav">
            <li><%= link_to 'Πίνακας Διαχείρισης', welcomes_path %></li>
        </ul>
      </div>
    </nav>
<p id="notice"><%= notice %></p>

<h1>Λίστα Πελατών</h1>

<table class="table">
  <thead>
    <tr>
      <th>Όνομα</th>
      <th>Επίθετο</th>
      <th>Email</th>
      <th>Κινητό</th>
      <th>Διεύθυνση</th>
      <th>Όροφος</th>
      <th>Μύνημα</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.surname %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.address %></td>
        <td><%= client.floor %></td>
        <td><%= client.message %></td>
        <td><%= link_to '<i class="fa fa-arrows-alt"></i> Προβολή'.html_safe, client, class:"btn btn-success btn-xs" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i> Επεξεργασία'.html_safe, edit_client_path(client), class:"btn btn-warning btn-xs" %></td>
        <td><%= link_to '<i class="fa fa-remove"></i> Διαγραφή'.html_safe, client, class:"btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>