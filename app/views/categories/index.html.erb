<div class="container">
<nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <ul class="nav navbar-nav">
            <li><%= link_to 'Πίνακας Διαχείρισης', welcomes_path %></li>
        </ul>
      </div>
    </nav>
<p id="notice"><%= notice %></p>

<h1>Λίστα Κατηγοριών</h1>

<table class="table">
  <thead>
    <tr>
      <th>Όνομα</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '<i class="fa fa-arrows-alt"></i> Προβολή'.html_safe, category, class:"btn btn-success btn-xs" %></td>
        <td><%= link_to '<i class="fa fa-edit"></i> Επεξεργασία'.html_safe, edit_category_path(category), class:"btn btn-warning btn-xs" %></td>
        <td><%= link_to '<i class="fa fa-remove"></i> Διαγραφή'.html_safe, category, class:"btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '<i class="fa fa-plus-square"></i> Νέα Κατηγορία'.html_safe, new_category_path, class:"btn btn-primary btn-xs" %>
</div>