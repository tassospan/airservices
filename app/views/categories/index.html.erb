<div class="container">
<nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <ul class="nav navbar-nav">
            <li><%= link_to 'Πίνακας Διαχείρισης', welcomes_path %></li>
            <li><%= link_to 'Αρχική Σελίδα', root_path %></li>
        </ul>
      </div>
    </nav>
<p id="notice"><%= notice %></p>

<h1>Λίστα Κατηγοριών</h1>

<table class="table">
  <thead>
    <tr>
      <th>Όνομα</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Εμφάνιση', category %></td>
        <td><%= link_to 'Επεξεργασία', edit_category_path(category) %></td>
        <td><%= link_to 'Διαγραφή', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Νέα Κατηγορία", new_category_path, class:"btn btn-default btn-xs" %>
</div>